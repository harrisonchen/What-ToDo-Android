<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studentglue.whattodotodolisttaskmanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/what_todo_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.studentglue.whattodotodolisttaskmanager.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.studentglue.whattodotodolisttaskmanager.NewListActivity"
            android:label="@string/title_activity_new_list" >
        </activity>
        <activity
            android:name="com.studentglue.whattodotodolisttaskmanager.NewTaskActivity"
            android:label="@string/title_activity_new_task" >
        </activity>
        <activity
            android:name="com.studentglue.whattodotodolisttaskmanager.MyListActivity"
            android:label="@string/title_activity_my_list"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.studentglue.whattodotodolisttaskmanager.ListActivity"
            android:label="@string/title_activity_list"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.studentglue.whattodotodolisttaskmanager.WhatToDoActivity"
            android:label="@string/title_activity_what_to_do"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".ImportantListActivity"
            android:label="@string/title_activity_important_task"
            android:windowSoftInputMode="stateHidden" >
        </activity>
    </application>

</manifest>
